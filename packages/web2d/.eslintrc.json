{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": [
        "airbnb-base",
        "plugin:cypress/recommended"
    ],
    "globals":{
        "Class": "readonly",
        "$": "readonly"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "max-len": [1,250],
        "import/no-extraneous-dependencies": ["warn", {
            "packageDir": ["./"],
            "devDependencies": ["!cypress/**/*.js"]
        }]
    },
    "settings": {
		    "import/resolver": {
			    "webpack": {
				    "config": "./webpack.common.js"
			    }
		    }
	  } 
}
